# MQTT Configuration
MQTT_BROKER=tcp://localhost:1883
MQTT_CLIENT_ID=iot-backend
MQTT_USERNAME=
MQTT_PASSWORD=

# Multi-topic MQTT Configuration
MQTT_TOPIC_TEMPERATURE=sensor/+/temperature
MQTT_TOPIC_HUMIDITY=sensor/+/humidity
MQTT_TOPIC_AUDIO=sensor/+/audio
MQTT_TOPIC_ANC=anc/+/control
MQTT_TOPIC_INFERENCE_REQ=ml/inference/request
MQTT_TOPIC_WINDOW_CONTROL=window/control
MQTT_TOPIC_IR_CONTROL=ir/control

# Legacy MQTT Topics (for backward compatibility)
MQTT_TOPIC_SENSOR=sensor/data
MQTT_TOPIC_ACTION=window/action

# ClickHouse Configuration
CLICKHOUSE_ADDR=localhost:9000
CLICKHOUSE_DB=iot
CLICKHOUSE_USER=default
CLICKHOUSE_PASS=

# ML Model Configuration
MODEL_PATH=./model/regression_model.json

# CQRS Inference Configuration
INFERENCE_POLLING_INTERVAL_SECONDS=60
INFERENCE_DATA_WINDOW_SECONDS=120
INFERENCE_HISTORICAL_BASELINE_DAYS=7
INFERENCE_Z_SCORE_THRESHOLD=1.5

# ML Service Configuration
ML_SERVICE_CLIENT_ID=ml-service
ML_SERVICE_MODEL_PATH=./ml_service/models/window_regressor.json
ML_SERVICE_MODEL_VERSION=v1.0.0
ML_SERVICE_OUTPUT_MIN=0.0
ML_SERVICE_OUTPUT_MAX=100.0

# ML Inference Configuration
ML_MIN_CONFIDENCE=0.0
ML_PERCENTILE_LOW=0.1
ML_PERCENTILE_HIGH=0.9

# ML Training Configuration
ML_TRAINING_MIN_SAMPLES=100
ML_TRAINING_TEST_SPLIT=0.2
ML_TRAINING_AUTO_TRAIN=true
ML_TRAINING_LOOKBACK_DAYS=30

# XGBoost Hyperparameters
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1
XGBOOST_N_ESTIMATORS=100
XGBOOST_SUBSAMPLE=0.8
